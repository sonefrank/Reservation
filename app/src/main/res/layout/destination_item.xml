<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#181c28">


    <ImageView
        android:id="@+id/imageViewDestination"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/rolands_varsbergs_mikmvyq3qhe_unsplash" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="Bafoussam"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtIndonesia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="Indonesia"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="357dp"
        android:layout_marginStart="80dp"
        app:srcCompat="@drawable/icons8_location_24" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/note" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="100dp"
        app:srcCompat="@drawable/icons8_star_48" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="4,9"
        android:textColor="@color/white"
        android:textSize="16sp" />
</androidx.cardview.widget.CardView >